@model IaraProj.Domain.Entities.Cotacao
@{
    ViewData["Title"] = "Cotação";
}


<form asp-action="Index">
   
    <div class="row">

        <div class="col-md-2">
            <label asp-for="CnpjComprador" class="form-label"></label>
            <input asp-for="CnpjComprador" class="form-control" required>
        </div>

        <div class="col-md-2">
            <label asp-for="CNPJFornecedor" class="form-label"></label>
            <input asp-for="CNPJFornecedor" class="form-control" required>
        </div>

        <div class="col-md-2">
            <label asp-for="NumeroCotacao" class="form-label"></label>
            <input asp-for="NumeroCotacao" class="form-control" required>
        </div>

        <div class="col-md-3">
            <label asp-for="DataCotacao" class="form-label"></label>
            <input asp-for="DataCotacao" class="form-control" required>
        </div>

        <div class="col-md-3">
            <label asp-for="DataEntregaCotacao" class="form-label"></label>
            <input asp-for="DataEntregaCotacao" class="form-control" required>
        </div>

    </div>

    <div class="row">

        <div class="col-md-2">
            <label asp-for="CEP" class="form-label"></label>
            <input asp-for="CEP" id="CEP" name="CEP" class="form-control" required>
        </div>

        <div class="col-md-3">
            <label asp-for="Logradouro" class="form-label"></label>
            <input asp-for="Logradouro" class="form-control">
        </div>

        <div class="col-md-3">
            <label asp-for="Complemento" class="form-label"></label>
            <input asp-for="Complemento" class="form-control">
        </div>
        <div class="col-md-2">
            <label asp-for="Bairro" class="form-label"></label>
            <input asp-for="Bairro" class="form-control">
        </div>
        <div class="col-md-2">
            <label asp-for="UF" class="form-label"></label>
            <input asp-for="UF" class="form-control">
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <label asp-for="Observacao" class="form-label"></label>
            <input asp-for="Observacao" class="form-control">
        </div>

    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="row">
                @if (Model != null && Model.CotacaoItens != null)
                {
                    for (int i = 0; i < Model.CotacaoItens.Count; i++)
                    {
                        <input type="hidden" asp-for="CotacaoItens[i].Ordem" value="@(i+1)" />
                        <div class="col-md-2">
                            <label asp-for="CotacaoItens[i].Descricao" class="form-label"></label>
                            <input asp-for="CotacaoItens[i].Descricao" class="form-control" required>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="CotacaoItens[i].NumeroItem" class="form-label"></label>
                            <input asp-for="CotacaoItens[i].NumeroItem" class="form-control" required>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="CotacaoItens[i].Preco" class="form-label"></label>
                            <input asp-for="CotacaoItens[i].Preco" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <label asp-for="CotacaoItens[i].Quantidade" class="form-label"></label>
                            <input asp-for="CotacaoItens[i].Quantidade" class="form-control" required>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="CotacaoItens[i].Marca" class="form-label"></label>
                            <input asp-for="CotacaoItens[i].Marca" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <label asp-for="CotacaoItens[i].Unidade" class="form-label"></label>
                            <input asp-for="CotacaoItens[i].Unidade" class="form-control">
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div style="padding-top:20px;">
                <button type="submit" name="TipoAcao" value="AdicionarItem" class="btn btn-primary me-3">Adicionar item</button>
                <button type="submit" name="TipoAcao" value="Cadastrar" class="btn btn-primary">Cadastrar</button>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/js/cep.js")" type="text/javascript"></script>
</form>



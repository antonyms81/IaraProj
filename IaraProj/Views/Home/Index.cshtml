@model IaraProj.Domain.Entities.Cotacao
@{
    ViewData["Title"] = "Cotação";
}
<form asp-action="Index">
    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="CnpjComprador" class="form-label"></label>
                <input asp-for="CnpjComprador" class="form-control">
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="row">
            @if (Model != null && Model.CotacaoItens != null)
            {
                for (int i = 0; i < Model.CotacaoItens.Count; i++)
                {
                    <input type="hidden" asp-for="CotacaoItens[i].Ordem" value="@(i+1)" />
                    <div class="mb-3">
                        <label asp-for="CotacaoItens[i].Descricao" class="form-label"></label>
                        <input asp-for="CotacaoItens[i].Descricao" class="form-control">
                    </div>
                }
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <button type="submit" name="TipoAcao" value="AdicionarItem" class="btn btn-primary me-3">Adicionar item</button>
            <button type="submit" name="TipoAcao" value="Cadastrar" class="btn btn-primary">Cadastrar</button>
        </div>
    </div>
</form>

    <h2>Cotações Encontradas</h2>

    <div style="padding-top:20px">
        <table width="100%" id="tabCotacoes">
            <tr>
                <td>NUMERO COTAÇÃO</td>
                <td>CNPJ COMPRADOR</td>
                <td>CNPJ FORNECEDOR</td>
                <td>DATA COTAÇÃO</td>
                <td>DATA ENTREGA COTAÇÃO</td>
                <td>AÇÕES</td>
            </tr>
            @if (Model.Cotacoes != null)
            {
                foreach (var item in Model.Cotacoes)
                {
                    <tr>
                        <td>@item.NumeroCotacao</td>
                        <td>@item.CnpjComprador</td>
                        <td>@item.CNPJFornecedor</td>
                        <td>@item.DataCotacao.ToString("dd/MM/yyyy")</td>
                        <td>@item.DataEntregaCotacao.ToString("dd/MM/yyyy")</td>
                        <td>
                            @Html.ActionLink("Editar", "Editar", "Home", new { ID = item.Id }, new { })
                             <span>| </span>
                            @Html.ActionLink("Excluir", "Deletar", "Home", new { ID = item.Id }, new { })
                        </td>

                    </tr>
                }
            }
            else
            {
                <div style="text-align: center">
                    <h3>NENHUMA VENDAS ENCONTRADAS</h3>
                </div>

            }
        </table>

    </div>




